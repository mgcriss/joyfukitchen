<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/header_bg_color"
    android:paddingLeft="10dp"
    android:paddingTop="24dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/haspre_header_pre"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/pre_white_32" />


    <Button
        android:id="@+id/haspre_header_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:textColor="@color/white"
        android:layout_marginRight="5dp"
        android:background="@drawable/shape_corner_haspre_header"
        android:layout_gravity="right|center_vertical"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/haspre_header_title"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"

        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/header_text_color"

        android:textSize="20sp" />


</FrameLayout>