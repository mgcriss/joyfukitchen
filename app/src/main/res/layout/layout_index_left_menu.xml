<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/show_user_name"
        android:paddingLeft="5dp"
        android:layout_marginBottom="15dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:src="@mipmap/left_head_portrait"
            />
        <TextView
            android:layout_width="0dp"
            android:id="@+id/username"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:layout_weight="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/menu"
        >
        <ImageView
            android:layout_width="@dimen/left_photo_volume"
            android:layout_height="@dimen/left_photo_volume"
            android:padding="5dp"
            android:src="@mipmap/left_menu"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="菜谱"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/left_text_size"
            android:layout_weight="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ingredients"
        >
        <ImageView
            android:layout_width="@dimen/left_photo_volume"
            android:layout_height="@dimen/left_photo_volume"
            android:padding="5dp"
            android:src="@mipmap/left_ingredients"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="食材"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/left_text_size"
            android:layout_weight="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/personalData"
        >
        <ImageView
            android:layout_width="@dimen/left_photo_volume"
            android:layout_height="@dimen/left_photo_volume"
            android:padding="5dp"
            android:src="@mipmap/left_personal_data"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/left_text_size"
            android:layout_weight="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/white"
        android:gravity="bottom"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@mipmap/left_set_up"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="设置"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:layout_weight="3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@mipmap/left_cancellation"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="注销"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:layout_weight="3"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>