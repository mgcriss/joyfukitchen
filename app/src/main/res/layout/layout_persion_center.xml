<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#70DF6C"
        >

    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="昵称"
        android:textSize="30sp"
        android:gravity="center"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="49dp"
            android:src="@mipmap/weight_green"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="体量(KG)"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/weight_edt"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:hint="80"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="22sp"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/height_blu"
            android:layout_marginLeft="26dp"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="身高(CM)"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/height_edt"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:hint="180"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="22sp"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@mipmap/target_img"
            android:layout_marginLeft="26dp"
            />
        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="目标"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            />

<!--

        <NumberPicker android:id="@+id/numberPicker"
                      android:layout_width="130dp"
                      android:layout_height="wrap_content"
                      android:focusable="true"
                      android:focusableInTouchMode="true"
            />
-->

        <EditText
            android:id="@+id/target_edt"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:hint="180"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="22sp"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/work_weight"
            android:layout_marginLeft="26dp"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="工作强度"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/work_weight_edt"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:hint="180"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="22sp"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>






</LinearLayout>