<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#70DF6C"
        android:paddingTop="24dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@mipmap/menu_back"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/edi_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="编辑"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingTop="10dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:textSize="20dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:src="@mipmap/weight_green"
            android:layout_gravity="center"
            android:scaleType="fitXY"

            />
        <TextView
            android:id="@+id/login_nickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >

    <LinearLayout
        android:id="@+id/weight_LLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/lay_border"
        android:layout_marginBottom="5dp"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@mipmap/weight_green"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                />
            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="体重(kg)"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/weight_text"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:hint="75kg"

                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_marginLeft="70dp"
                />


        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"

            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/height_LLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/lay_border"
        android:layout_marginBottom="5dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@mipmap/height_blu"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                />
            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="身高(cm)"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/height_text"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:hint="180cm"

                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_marginLeft="70dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"

            android:layout_marginRight="@dimen/activity_horizontal_margin"

            />
    </LinearLayout>
      <!--  目标-->
    <LinearLayout
        android:id="@+id/target_LLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/lay_border"
        android:layout_marginBottom="5dp"
        >
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@mipmap/target_img"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                />
            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="目标"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/target_txt"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:hint="减肥"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_marginLeft="70dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"

            android:layout_marginRight="@dimen/activity_horizontal_margin"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/strength_LLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/lay_border"
        android:layout_marginBottom="5dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@mipmap/work_weight"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="工作强度"
                android:textSize="17sp"
               android:layout_gravity="center"
                android:layout_marginLeft="4dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/strength_text"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:hint="脑力劳动"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_marginLeft="40dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"

            android:layout_marginRight="@dimen/activity_horizontal_margin"

            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>