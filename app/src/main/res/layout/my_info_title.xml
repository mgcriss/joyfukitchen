<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="#70DF6C"
        android:paddingTop="24dp"
        >


    <ImageView
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/menu_back"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:text="个人资料"/>


    <TextView
        android:id="@+id/keep_txt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="right"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="3dp"
        android:text="保存"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:background="@drawable/lay_border"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp" >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/target_img"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            />
        <TextView
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更换头像"
           android:layout_gravity="center"
            />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next_step"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:background="@drawable/lay_border"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
       <TextView
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:text="昵称"
           android:textSize="17dp"
           android:gravity="center"
           android:layout_marginLeft="@dimen/activity_horizontal_margin"

           />
        <EditText
            android:id="@+id/nickName_info_edt"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:hint=""
            android:textSize="13dp"
            android:background="@null"
            android:layout_gravity="center"
            />
       </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/gender_LLay"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:background="@drawable/lay_border"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="性别"
            android:textSize="17dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            />
        <TextView
            android:id="@+id/gender_text"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="13dp"
            android:layout_gravity="center"
            />
            </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next_step"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/birthday_LLay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:background="@drawable/lay_border"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="生日"
            android:textSize="17dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            />
        <TextView
            android:id="@+id/birthday_text"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请选择"
            android:textSize="13dp"
            android:layout_gravity="center"
            />
            </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next_step"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/occupation_LLay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:background="@drawable/lay_border"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="体重"
            android:textSize="17dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            />
        <TextView
            android:id="@+id/occupation_text"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:hint="请选择"
            android:textSize="13dp"
            android:gravity="center"
            />
            </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next_step"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/height_info_llay"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/lay_border"
        android:layout_marginRight="3dp"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="身高"
                android:textSize="17dp"
                android:gravity="center"
                android:background="@null"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"

                />
        <TextView
            android:id="@+id/height_info_txt"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:hint="请选择"
            android:textSize="13dp"
            android:background="@null"
            android:gravity="center"
            />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next_step"
            android:layout_gravity="center"
            />
    </LinearLayout>




    <LinearLayout
        android:id="@+id/target_info_llay"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:background="@drawable/lay_border"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="目标"
                android:textSize="17dp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                />
            <TextView
                android:id="@+id/target_info_txt"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:hint="请选择"
                android:textSize="13dp"
                android:background="@null"
                android:gravity="center"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next_step"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/strength_info_llay"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:background="@drawable/lay_border"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="工作强度"
                android:textSize="17dp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                />
            <TextView
                android:id="@+id/strength_info_txt"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:hint="请选择"
                android:textSize="13dp"
                android:background="@null"
                android:gravity="center"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next_step"
            android:layout_gravity="center"
            />
    </LinearLayout>






</LinearLayout>


