<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="myTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="colorPrimary">@color/header_bg_color</item>
        <item name="colorPrimaryDark">@color/header_bg_color</item>
        <item name="colorAccent">@color/header_bg_color</item>
    </style>


    <style name="bottom_radioGroup">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <!-- 自定义view diyDateView属性 -->
    <style name="diyDateViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/diy_date_color</item>
        <item name="android:textSize">20sp</item>

    </style>


</resources>
